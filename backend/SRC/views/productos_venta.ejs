<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Productos </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <style>
    body {
      margin: 0;
    }

    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      width: 10%;
      background-color: #f1f1f1;
      position: fixed;
      height: 100%;
      overflow: auto;
    }

    li a {
      display: block;
      color: #000;
      padding: 8px 16px;
      text-decoration: none;
    }

    li a.active {
      background-color: #44443C;
      color: white;
    }

    li a:hover:not(.active) {
      background-color: #76766E;
      color: white;
    }
    </style>

</head>
<body>

  <table class ='table table-bordered table-hover'>
      <thead>
          <tr>
              <th>ID</th>
              <th>Producto</th>
          </tr>
      </thead>
      <tbody>
          <% for(var i = 0; i < lista.length; i++){ %>
              <tr>
                <td><%= lista[i]._id %></td>
                <td><%= lista[i].id_prod %></td>
              </tr>
           <%}%>

      </tbody>
  </table>



    <div class="container" style="margin-left:10%;padding:1px 16px;height:1000px;">
        <h1> Productos </h1>
        <hr>
        <h3>Agregue a la lista actual del cliente</h3>
        <hr>
        <table class ='table table-bordered table-hover'>
            <thead>
                <tr>
                    <th>Codigo</th>
                    <th>Tipo</th>
                    <th>Material</th>
                    <th>Piedra Preciosa</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Operaciones</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < producto.length; i++){ %>
                    <tr>
                        <td><%= producto[i].codigo %></td>
                        <td><%= producto[i].tipo %></td>
                        <td><%= producto[i].material %></td>
                        <td><%= producto[i].piedra %></td>
                        <td><%= producto[i].cantidad %></td>
                        <td><%= producto[i].precio %></td>
                        <td>
                            <!--
                            <a
                            class="btn btn-success"
                             href="/agregar/<%= producto[i]._id %>">Modificar</a>-->


                             <a
                             id = "delete"
                             class="btn btn-danger"href="/detalle_venta_crear/<%= producto[i]._id%>/<%= numero_venta %>">Agregar a lista</a>

                        </td>
                    </tr>
                 <%}%>

            </tbody>
        </table>

        <a href="/venta_cancelar" class="btn btn-light btn-sm">
          Cancelar venta
        </a>

    </div>

    <script>

        document.getElementById('delete_producto').addEventListener('click',function (e){
            let response = confirm('Esta seguro de eliminar');
            if(!response){
                e.preventDefault();
            }
        });

</script>
</body>
</html>
