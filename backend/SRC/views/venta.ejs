<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> listas </title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <style>
    body {
      margin: 0;
    }

    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
      width: 10%;
      background-color: #f1f1f1;
      position: fixed;
      height: 100%;
      overflow: auto;
    }

    li a {
      display: block;
      color: #000;
      padding: 8px 16px;
      text-decoration: none;
    }

    li a.active {
      background-color: #44443C;
      color: white;
    }

    li a:hover:not(.active) {
      background-color: #76766E;
      color: white;
    }
    </style>

</head>
<body>

    <ul>
      <li><a href="/inicio">Inicio</a></li>
      <li><a  class="active" href="/venta">Venta</a></li>
      <% if ( user.rol == 'duena' || user.rol == 'JT'){%>
      <li><a href="/ventas">ventas</a></li>
      <%}%>
      <li><a  href="/pedidos">Pedidos</a></li>
      <% if ( user.rol == 'duena' ){%>
          <li><a href="/empleados">Empleados</a></li>
      <%}%>
      <li><a href="/profile">Perfil</a></li>
    </ul>

    <div class="container" style="margin-left:10%;padding:1px 16px;height:1000px;">
        <h1> Ventas </h1>
        <form action="/agregar" method="post">
            <div class="form-group">
                <a class="btn btn-secondary" href="/crear_venta"><i class="fa fa-list-alt"></i>Crear venta</a>
            </div>
        </form>
        <form action="/venta_periodo" method="post">
            <div class="form-group">
                <input type="date" id="fechaInicial" class="form-control" name="fechaInicial" placeholder="Fecha Inicio">
                <input type="date" id="fechaFinal" class="form-control" name="fechaFinal" placeholder="Fecha Final">
            </div>
            <a class="btn btn-primary" href="/venta_periodo"><i class="fa fa-list-alt"></i>venta_periodo</a>
        </form>

        <hr>

        <hr>
        <table class ='table table-bordered table-hover'>
            <thead>
                <tr>
                    <th>Numero de Venta</th>
                    <th>Fecha</th>
                    <th>Metodo de pago</th>
                    <th>Descuento</th>
                    <th>Total</th>
                    <th>ID vendedor</th>
                    <th>Cliente</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i < venta.length; i++){ %>
                    <tr>
                        <td><%= venta[i].numero_venta %></td>
                        <td><%= venta[i].fecha %></td>
                        <td><%= venta[i].metodo_pago %></td>
                        <td><%= venta[i].descuento %></td>
                        <td><%= venta[i].total %></td>
                        <td><%= venta[i].id_vendedor %></td>
                        <td><%= venta[i].cliente%></td>
                        <td>
                            <!--
                            <a
                            class="btn btn-success"
                             href="/agregar_prod/<%= venta[i]._id %>">Modificar</a>-->
                             <a
                             class="btn btn-success"
                              href="/editar_prod/<%= venta[i]._id%>"> <i class="fa fa-list-alt" aria-hidden="true"></i>Modificar</a>
                            <a
                            id = "delete"
                            class="btn btn-danger"
                            href="/delete_venta/<%= venta[i]._id%>">Eliminar</a>
                        </td>
                    </tr>
                 <%}%>

            </tbody>
        </table>

    </div>

    </div>
    <script>

        document.getElementById('delete_venta').addEventListener('click',function (e){
            let response = confirm('Esta seguro de eliminar');
            if(!response){
                e.preventDefault();
            }
        });

</script>
</body>
</html>
